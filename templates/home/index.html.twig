{% extends 'base.html.twig' %}

{% block title %}Page d'accueil{% endblock %}

        {% block stylesheets %}
            {{ encore_entry_link_tags('home') }}
            {{ parent() }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('home') }}
            {{ parent() }}
        {% endblock %}
{% block body %}
    <header class="masthead">
        <div class="container px-4 px-lg-5 d-flex h-100 align-items-center justify-content-center">
            <div class="d-flex justify-content-center">
                <div class="text-center">
                    <h1 class="mx-auto my-0 text-uppercase">Rezzoug Yannis</h1>
                    <h2 class="text-white-50 mx-auto mt-2 mb-5">Portfolio actuel</h2>
                    <a class="btn"
                       href="http://cv.rezzoug-yannis.com" style="
                       background-color: #3e3e3e; border-color: #3e3e3e; color: #FFF;">- Voir le cv -</a>
                </div>
            </div>
        </div>
    </header>
    <section class="about-section">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="/img/potion.jpg" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">Bouteille animé</h5>
                    <p class="card-text">Bouteille animé avec un effet de surbrillance</p>
                    <a href="{{ path('bottle') }}" class="btn btn-primary">Aller voir !</a>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
